<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/isu"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/classname"
        android:layout_width="156dp"
        android:layout_height="64dp"
        android:ems="10"
        android:hint="Class Name:"
        android:inputType="class"
        android:textColor="#E60B0B"
        android:textColorHint="#F8F5F5"
        android:textSize="25"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="54dp" />

    <EditText
        android:id="@+id/difficulty"
        android:layout_width="180dp"
        android:layout_height="63dp"
        android:ems="10"
        android:hint="Difficulty: 1-10"
        android:inputType="number"
        android:textColorHint="#F8F5F5"
        android:textSize="22"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="139dp" />

    <EditText
        android:id="@+id/review"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Review:"
        android:inputType="Review"
        android:textColor="#E60B0B"
        android:textColorHint="#F8F5F5"
        android:textSize="22"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="222dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#131212"
        android:text="Submit Data"
        app:rippleColor="#D31E1E"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="610dp" />


</androidx.constraintlayout.widget.ConstraintLayout>